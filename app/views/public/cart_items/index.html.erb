<h1>ショッピングカート</h1>
  <table border = "1">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th colspan = "1"></th>
      </tr>
    </thead>
    <% @cart_items.each do |cart_item| %>
    <tbody>
      <tr>
        <th><%= item.name %></th>
        <th><%= item.with_tax_price %></th>
        <th><%= cart_item.amount %></th>
        <th><%= cart_item.subtotal %></th>
      </tr>
    </tbody>
    <% end %>
  </table>
