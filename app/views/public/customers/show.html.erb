<h1>マイページ</h1>
<p>登録情報</p>
<%= link_to "編集する", edit_customer_path(current_customer) %>

<table>
  <tr>
    <th>氏名</th>
    <td><%= @customer.last_name %>&emsp;<%= @customer.first_name %></td>
  </tr>
  <tr>
    <th>カナ</th>
    <td><%= @customer.last_name_kana %>&emsp;<%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>

<P>注文履歴</P>
<%= link_to "一覧を見る", orders_path %>
