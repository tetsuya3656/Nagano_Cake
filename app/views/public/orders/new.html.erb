<h1>注文情報入力</h1>

<%= form_with model: @order, url: orders_comfirm_path, method: :post do |f| %>
  <p>支払方法</p>
    <%= f.radio_button :payment_method, 0, checked: true %>
      <%= f.label :payment_method, "クレジットカード" %>
    <%= f.radio_button :payment_method, 1 %>
      <%= f.label :payment_method, "銀行振込" %>
  <p>お届け先</p>
    <%= f.radio_button :address_number, 1, checked: "checked" %>
      <%= f.label :address_number_1, "ご自身の住所" %></br>
      〒<%= current_customer.postal_code %>
        <%= current_customer.address %></br>
        <%= current_customer.last_name %><%= current_customer.first_name %></br>


    <%= f.submit "確認画面へ進む" %>
<% end %>