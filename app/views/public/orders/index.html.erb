<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= order.created_at %></td>
      <td>〒<%= order.address %><%= order.name %></td>
      <td>
        <% @orders.each do |order| %>
          <%= order.name %>
        <% end %>
      </td>
      <td><%= @total %></td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", public_order_path(current_customer) %></td>
    </tr>
  </tbody>
  <% end %>
</table>