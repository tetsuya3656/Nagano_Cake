<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= order.created_at %></td>
      <td>
        〒<%= order.postal_code %></br>
          <%= order.address %></br>
          <%= order.name %>
      </td>
      <td>
        <% order.items.each do |item| %>
          <%= item.name %>
        <% end %>
      </td>
      <td><%= order.total_payment %>円</td>
      <td><%= order.status_i18n %></td>
      <td><%= link_to "表示する", public_order_path(order.id) %></td>
    </tr>
  </tbody>
  <% end %>
</table>