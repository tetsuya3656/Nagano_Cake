<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

　<div class="field">
    <%= f.label :名前 %><br/>
    (姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "令和" %>
    (名)<%= f.text_field :first_name, autofocus: true, autocomplete: "太郎" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %><br/>
    (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "レイワ" %>
    (メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "タロウ" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %><br/>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "0000000" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br/>
    <%= f.text_field :address, autofocus: true, autocomplete: "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "00000000" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>（<%= @minimum_password_length %> 字以上）</em>
    <% end %><br/>
    <%= f.password_field :encrypted_password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br/>
    <%= f.password_field :encrypted_password, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>


<h4>既に登録済みの方</h4>
<%= render  "public/shared/links" %><%= "からログインしてください" %>
