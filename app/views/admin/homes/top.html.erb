<h1>注文履歴一覧</h1>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at, admin_order_path(order.id) %></td>
        <td><%= order.name %></td>
        <td>
          <% @total = 0 %>
          <% order.order_details.each do |order_detail| %>
          <% @total = @total + order_detail.amount %>
          <% end %>
          <%= @total %>
        </td>
        <td><%= order.status_i18n %></td>
      </tr>
    <% end %>
  </tbody>
</table>