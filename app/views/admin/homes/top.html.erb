<h1>注文履歴一覧</h1>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <%= @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.customer.name %></td>
        <%# each文の中にeach文を書く%>
        <td><%= order.order_detail.amount %></td>
        <td><%= order.status %></td>
      </tr>
    <% end %>
  </tbody>