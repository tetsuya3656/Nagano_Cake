<h1>注文履歴詳細</h1>

  <h2>購入者</h2>
    <%= @order.name %>
  <h2>注文日</h2>
    <%= @order.created_at %>
  <h2>配送先</h2>
    <%= @order.address %>
  <h2>支払方法</h2>
    <%= @order.payment_method %>
  <h2>注文ステータス</h2>
    <%= @order.status %>

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>制作ステータス</th>
      </tr>
    </thead>
    <%= @order.each do |order| %>
    <tbody>
      <tr>
        <td><%= @order.item.name %></td>
        <td><%= @order.item.price %></td>
        <td><%= @order.order_detail.amount %></td>

      </tr>
    </tbody>
      <h2>商品合計</h2>
      <h2>送料</h2>
      <h2>請求合計金額</h2>
  </table>