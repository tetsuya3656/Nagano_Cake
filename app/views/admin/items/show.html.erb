<div class = "row" >
  <h1>商品詳細</h1>
    <div class = "col-xs-4">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, width: '20%', height: '20%' %>
      <% else %>
        <%= image_tag "no_image", width: '20%', height: '20%' %>
      <% end %>
    </div>
    <div class = "col-xs-9">
      <table>
        <tr>
          <th>商品名</th>
          <th><%= @item.name %></th>
        </tr>
        <tr>
          <th>商品説明</th>
          <th><%= @item.introduction %></th>
        </tr>
        <tr>
          <th>税込価格<br>
              (税抜価格)
          </th>
          <th><%= @item.with_tax_price%>(<%= @item.price %>)円</th>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <th><% if @item.is_active == true %>
              販売中
              <% else %>
              販売停止中
              <% end %>
          </th>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path(@item) %>
    </div>
</div>

